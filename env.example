# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# PostgreSQL Configuration (used by docker-compose.yml)
# WARNING: Changing these after database creation may cause data loss!
POSTGRES_DB=rust_api
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-change-in-production
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Application Configuration (used by rust-api via env_file)
RUST_LOG=info
HOST=0.0.0.0
PORT=3000

# Database Connection (built into DATABASE_URL automatically)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=rust_api
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password-change-in-production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
REDIS_URL=redis://redis:6379
SESSION_COOKIE_NAME=connect.sid
SESSION_COOKIE_DOMAIN=.table-tap.app
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax
SESSION_MAX_AGE_SECONDS=86400

# Database Connection Pool Settings
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_ACQUIRE_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600

# Production Overrides (uncomment and modify for production)
# POSTGRES_PASSWORD=super-secure-production-password
# JWT_SECRET=super-secure-jwt-secret-for-production
# RUST_LOG=warn
# PORT=8080
